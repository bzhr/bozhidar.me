---
import Layout from '../../layouts/Layout.astro';
import PostPreview from '../../components/PostPreview.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout
  title="Blog | Bozhidar Hristov"
  description="All blog posts by Bozhidar Hristov on software development, technology, and endurance training."
  keywords={[
    'Bozhidar Hristov',
    'blog posts',
    'software development',
    'technology',
    'endurance training',
  ]}
>
	<h1>Blog Posts</h1>
	<section class="posts">
		{posts.map(post => (
			<PostPreview
				title={post.data.title}
				description={post.data.description}
				pubDate={post.data.pubDate}
				url={`/blog/${post.slug}`}
			/>
		))}
	</section>
</Layout>

<style>
	h1 {
		margin-bottom: 2rem;
	}
</style>
