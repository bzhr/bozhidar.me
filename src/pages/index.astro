---
import Layout from "../layouts/Layout.astro";
import PostPreview from "../components/PostPreview.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog"))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<Layout
  title="Bozhidar Hristov | Personal Blog"
  description="The personal site and blog of Bozhidar Hristov: software development, technology, and endurance training."
  keywords={[
    "Bozhidar Hristov",
    "Bozhidar",
    "personal blog",
    "software development",
    "technology",
    "endurance training",
  ]}
>
  <section class="intro">
    <h1>Hi, I'm Bozhidar ðŸ‘‹</h1>
    <p>
      Welcome to my corner of the internet. Here, I share my thoughts on
      software development, technology, endurance training and other topics that
      interest me. You can find more about me at the <a href="/about"
        >about me</a
      > page.
    </p>
  </section>

  <section>
    <h2>Latest Posts</h2>
    {
      posts.map((post) => (
        <PostPreview
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate}
          url={`/blog/${post.slug}`}
        />
      ))
    }
    <div class="view-all">
      <a href="/blog">View all posts â†’</a>
    </div>
  </section>
</Layout>

<style>
  .intro {
    margin: 3rem 0;
  }
  .intro-logo {
    display: block;
    width: 96px;
    height: auto;
    margin: 0 0 1rem 0;
  }
  h1 {
    font-size: 2.5rem;
    margin: 0 0 1rem 0;
  }
  .view-all {
    margin-top: 2rem;
  }
</style>
