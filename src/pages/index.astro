---
import Layout from '../layouts/Layout.astro';
import PostPreview from '../components/PostPreview.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
).slice(0, 3);
---

<Layout title="Bozhidar's Blog">
	<section class="intro">
		<h1>Hi, I'm Bozhidar ðŸ‘‹</h1>
		<p>
			Welcome to my corner of the internet. Here, I share my thoughts on software development,
			technology, and other topics that interest me.
		</p>
	</section>

	<section>
		<h2>Latest Posts</h2>
		{posts.map(post => (
			<PostPreview
				title={post.data.title}
				description={post.data.description}
				pubDate={post.data.pubDate}
				url={`/blog/${post.slug}`}
			/>
		))}
		<div class="view-all">
			<a href="/blog">View all posts â†’</a>
		</div>
	</section>
</Layout>

<style>
	.intro {
		margin: 3rem 0;
	}
	h1 {
		font-size: 2.5rem;
		margin: 0 0 1rem 0;
	}
	.view-all {
		margin-top: 2rem;
	}
	.view-all a {
		color: var(--accent);
		text-decoration: none;
		font-weight: 500;
	}
</style>